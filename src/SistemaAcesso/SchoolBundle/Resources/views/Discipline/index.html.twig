{% extends 'SistemaAcessoBaseBundle::Layout/layout.html.twig' %}
{% set page_title = 'Disciplinas' %}

{% block body %}


    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Listagem de disciplinas <label  class="badge bg-info" style="color: white;">{{ total }}</label></h4>
            {% if app.user.granted('ROLE_ADMIN') %}
                <a href="{{ path('discipline_new') }}" class="btn btn-success mb_sm btn-sm pull-right">Novo</a>
            {% endif %}
        </div>
        <div class="panel-body">
            <div id="datatables__example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div id="datatables__example_filter" class="dataTables_filter">
                    <label>Pesquisar:
                        <input type="search" class="form-control input-sm" placeholder=""
                               aria-controls="datatables__example">
                    </label>
                </div>
            </div>

            {% include 'SistemaAcessoBaseBundle::Layout/flashMessages.html.twig' %}


            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Status</th>
                    <th>Nome</th>
                    <th>Curso</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for discipline in disciplines %}
                    <tr>
                        <td>{{ discipline.active|status_label }}</td>
                        <td>
                            <strong>{{ discipline.sigla }}</strong><br>
                            {{ discipline.name }}
                        </td>
                        <td>
                            <strong>{{ discipline.course.sigla }}</strong> <a class="title" title="Ir para o curso" href="{{ path('course_edit', {'id' : discipline.course.id}) }}" target="_blank"><i class="fa fa-external-link-square" aria-hidden="true"></i></a><br>
                            {{ discipline.course.name }} | {{ discipline.course.knowledgeArea }}
                        </td>
                        <td>
                            {% if app.user.granted('ROLE_ADMIN') %}
                                <div class="btn-group btn-group-xs">
                                    <a href="{{ path('discipline_edit', { 'id': discipline.id}) }}"
                                       class="btn btn-default"
                                       title="Editar">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </div>
                                <div class="btn-group btn-group-xs">
                                    <a href="{{ path('discipline_delete', { 'id': discipline.id}) }}"
                                       class="btn btn-default remove-this"
                                       title="Excluir">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            {% endif %}

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-right">
                {{ knp_pagination_render(disciplines) }}
            </div>

        </div>
    </div>

{% endblock %}