{{ form_start(form, { attr: { novalidate: 'novalidate', class: form_css|default('') } }) }}

<div class="row">
    <div class="col-sm-3">
        <div class="form-group {% if form.name.vars.errors|length %} has-error {% endif %}">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group {% if form.sigla.vars.errors|length %} has-error {% endif %}">
            {{ form_label(form.sigla) }}
            {{ form_widget(form.sigla) }}
            {{ form_errors(form.sigla) }}
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group {% if form.knowledgeArea.vars.errors|length %} has-error {% endif %}">
            {{ form_label(form.knowledgeArea) }}
            {{ form_widget(form.knowledgeArea) }}
            {{ form_errors(form.knowledgeArea) }}
        </div>
    </div>
</div>

{{ form_widget(form._token) }}

<hr>
<div class="row">
    <div class="col-sm-12">
        <div class="form-actions">
            <a href="{{ path('course_index') }}" class="btn btn-default waves-effect btn-fw">Cancelar</a>

            <button type="submit" class="btn {{ button_css|default('btn-primary btn-fw ') }} waves-effect">
                {{ button_label|default('Salvar') }}
            </button>
        </div>
    </div>
</div>

