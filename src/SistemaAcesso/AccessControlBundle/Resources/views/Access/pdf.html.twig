<!DOCTYPE html>
<html lang="pt_BR">
<head>
    <meta charset="utf-8">
</head>
<body>


<div class="row">
    <div class="col-xs-2">
        <img src="{{ logo }}" alt="..." width="70" height="70">
    </div>
    <div class="col-xs-9">
        <div class="text-center">
            <h3> IFNMG - Campus Januária </h3>
            <h5>RELATÓRIO GERENCIAL DE ACESSOS</h5>
        </div>
    </div>
</div>
<br>
<div class="row">
    <div class="col-xs-2"><strong>Gerado em:</strong></div>
    <div class="col-xs-9">{{ null | date('d/m/Y') }} às {{ null | date('H:i:s') }}</div>
</div>
<div class="row">
    <div class="col-xs-2"><strong>Usuário:</strong></div>
    <div class="col-xs-9">{{ app.user.name }}</div>
</div>
<div class="row">
    <div class="col-xs-2"><strong>Relatório de:</strong></div>
    <div class="col-xs-9">
        {% if filter.isToday %}
            {{ null | date('d/m/Y') }}
        {% else %}
            {{ filter.startDate | date('d/m/Y') }} à {{ filter.endDate | date('d/m/Y') }}
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-xs-2"><strong>Ambiente:</strong></div>
    <div class="col-xs-9">
        {% if filter.environment %}
            {{ filter.environment.name }}
        {% else %}
            Todos os ambientes cadastrados.
        {% endif %}
    </div>
</div>

