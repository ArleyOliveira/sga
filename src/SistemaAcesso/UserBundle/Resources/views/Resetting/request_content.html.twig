{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-xs-12">
        <div style="padding: 20px;">
            <h2 class="text-center">Esqueceu a senha?</h2>
            <p>
                Informe o e-mail da conta abaixo e enviaremos
                para seu e-mail as instruções para mudar a senha.
            </p>
            {% if invalid_username is defined %}
                <div class="alert alert-danger"> <i class="fa fa-exclamation-triangle"></i> Email ou usuário inválido!</div>
            {% endif %}
            <form
                    name="reset"
                    action="{{ path('fos_user_resetting_send_email') }}"
                    method="POST"
                    class="fos_user_resetting_request">
                <div class="form-group">
                    <label for="username">E-mail ou usuário</label>
                    <input type="email" id="username" name="username" placeholder="E-mail ou usuário" class="form-control"
                           required>

                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-success pull-right btn-block">
                            <i class="fa fa-key" aria-hidden="true"></i> Recuperar
                        </button>
                    </div>

                    <div class="col-xs-12">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-link pull-left btn-block">Voltar</a>
                        {% endif %}
                    </div>
                </div>




            </form>
        </div>
    </div>
</div>





